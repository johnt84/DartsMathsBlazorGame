@if (ScoreForMathsGuess is not null)
{
    <MudField Class="mt-4 ml-4 mb-6" Label="Left to score">
        @ScoreForMathsGuess.LeftToScore
    </MudField>

    @if (ScoreForMathsGuess.Scores is not null)
    {
        foreach (var score in ScoreForMathsGuess.Scores)
        {
            if (ContainsABull(score.ScoreArea))
            {
                <MudField Class="ml-4 mb-4" Label="Score">
                    @score.ScoreArea
                </MudField>
            }
            else
            {
                <MudField Class="ml-4  mb-4" Label="Score">
                    @score.ScoreLabel
                </MudField>
            }
        }
    }

    <ScoreAreaDropdown Class="mt-4 ml-4 mb-4" @bind-ScoringArea="SelectedScoreArea" />

    <MudNumericField T="int"
                    Class="ml-4 mb-4" 
                    Label="Score Value"
                    Min="1"
                    Max="20"
                    @bind-Value="ScoreValue" />

    <MudButton Variant="Variant.Filled"
               Disabled="IsGuessCorrect is not null"
               Class="ml-4 mt-4"
               Color="Color.Primary"
               OnClick="Guess"
               Size="Size.Small">
        Guess
    </MudButton>

    <MudButton Variant="Variant.Filled"
               Class="ml-4 mt-4"
               Color="Color.Primary"
               OnClick="Next"
               Size="Size.Small">
        Next
    </MudButton>

    @if (IsGuessCorrect is not null)
    {
        @if (IsGuessCorrect.Value == true)
        {
            <MudField Class="mt-5 ml-4 mb-4">
                Correct
            </MudField>
        }
        else
        {
            <MudField Class="mt-5 ml-4 mb-4">
                Incorrect
            </MudField>

            <MudField Class="mt-5 ml-4 mb-4" Label="Correct Score">
                @ScoreForMathsGuess.ScoreToFinish.ScoreLabel
            </MudField>
        }
    }
}


