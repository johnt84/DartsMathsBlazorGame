<MudSelect T="ScoreArea"
           ReadOnly="ReadOnly"
           Value="ScoringArea"
           Label="@Label"
           Class="@Class"
           ValueChanged="ScoringAreaChanged"
           Placeholder="Please Select">
    @foreach (var scoreArea in ScoreAreas)
    {
        <MudSelectItem Value="@scoreArea">
            @scoreArea
        </MudSelectItem>
    }
</MudSelect>
